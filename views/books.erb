<h2>Books</h2>
<ul class="recent-media grid">
  <% @books.each do |item| %>
    <li>
      <a href="/books/<%= item[:id] %>">
        <img style="width:232px;" src="<%= item[:image_url] %>" alt="<%= item[:title] %>">
        <div>
          <h3><%= item[:title] %></h3>
          <p><%= item[:credits] %></p>
        </div>
      </a>
    </li>
   <% end %>
</ul>
